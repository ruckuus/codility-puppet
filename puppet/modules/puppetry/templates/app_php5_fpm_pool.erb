[<%= @app_name %>]
user = <%= @user %>
group = <%= @user %>
listen = <%= @listen_url %>
listen.allowed_clients = 127.0.0.1
listen.owner = <%= @user %>
listen.group = <%= @user %>
listen.mode = 0666
pm = dynamic
pm.max_children = 5
pm.start_servers = 2
pm.min_spare_servers = 1
pm.max_spare_servers = 3
pm.max_requests = 50
request_terminate_timeout = 180s
env[HOST_DEBUG] = 1
env[HOST_ENV] = dev
catch_workers_output = yes
